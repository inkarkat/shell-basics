#!/bin/bash
shopt -qs extglob # Enable extended file pattern matching operators from ksh (?(pattern-list), !(pattern-list), ...) in Bash.

printUsage()
{
    cat <<HELPTEXT
Test whether any ARG matches GLOB.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" "'GLOB' [ARG ...] [-?|-h|--help]"
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

glob="$1"; shift
for elem
do
    case "$elem" in
	$glob) exit 0;;
    esac
done
exit 1
