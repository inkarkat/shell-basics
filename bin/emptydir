#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Check whether the passed dirspec does not contain any files (or is not a
directory, or does not exist). Returns 1 only if it is a directory and contains
at least one file or subdirectory.
HELPTEXT
printf 'Usage: %q %s\n' "$(basename "$1")" 'DIR [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac
[ $# -eq 1 ] || { printUsage "$0"; exit 2; }

readonly dirspec="$1"

shopt -s nullglob dotglob
f=("${dirspec%/}"/*); ! ((${#f[@]}))
