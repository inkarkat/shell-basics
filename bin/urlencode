#!/bin/bash
# Source: http://stackoverflow.com/a/10660730/813602
readonly string=${1:?}
readonly strlen=${#string}
encoded=
pos=

for (( pos=0; pos < strlen; pos++ ))
do
    c=${string:$pos:1}
    case "$c" in
	[-_.~a-zA-Z0-9])	o="$c";;
	*)			printf -v o '%%%02x' "'$c";;
    esac
    encoded+="$o"
done
printf '%s\n' "$encoded"
