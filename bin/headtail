#!/bin/bash
shopt -qs extglob

readonly DEFAULT_LINES=5
: ${HEADTAIL_LINENUM_MARKER='{}'}
lineNumMarker="$HEADTAIL_LINENUM_MARKER"; unset HEADTAIL_LINENUM_MARKER
: ${HEADTAIL_FILE_MARKER='{F}'}
fileMarker="$HEADTAIL_FILE_MARKER"; unset HEADTAIL_FILE_MARKER
# HEADTAIL_TEMP_PREFIX	Temporary file name prefix used for
#			--separator-cutline-file with standard input.

printShortUsage()
{
    # Note: short followed by long option; if the user knows the short one, she can
    # skim the long one.
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-n|--lines=[-]NUM] [-D|--duplicate-if-short] [-s|--separator HEAD-TAIL-SEPARATOR|--separator-cutline[-file]|--separator-cut-what WHAT] [-q|--quiet|--silent|-v|--verbose] [--] [FILE ...] [-?|-h|--help]'
    printf 'Usage: cat FILE [...] | %q %s\n' "$(basename "$1")" '[...] [-]'
}
printUsage()
{
    # This is the short help when launched with no or incorrect arguments.
    # It is printed to stderr to avoid accidental processing.
    printShortUsage "$1" >&2
    printf >&2 '\nTry %q --help for more information.\n' "$(basename "$1")"
}
printLongUsage()
{
    # This is the long "man page" when launched with the help argument.
    # It is printed to stdout to allow paging with 'more'.
    cat <<HELPDESCRIPTION
Print the first $DEFAULT_LINES and last $DEFAULT_LINES lines of each FILE to standard output (handling
overlaps).
HELPDESCRIPTION
    echo
    printShortUsage "$1"
    echo
    cat <<HELPTEXT
    --lines|-n [-]NUM	Print NUM lines instead of the default ${DEFAULT_LINES};
			with the leading '-', print all but NUM lines of each
			file.
    --duplicate-if-short|-D
			Always print 2 * (${DEFAULT_LINES} / the number of input lines
			(whichever is smaller)), duplicating lines if necessary.
    --separator|-s HEAD-TAIL-SEPARATOR
			Print HEAD-TAIL-SEPARATOR between the first and last
			lines. If only one line would be omitted, print the
			NUM+1 one instead.${lineNumMarker:+ Inside, $lineNumMarker is replaced with the
			number (2 or more, because a single would-be omitted
			line does not print the separator) of omitted lines.}${fileMarker:+
			Inside, $fileMarker is replaced with the current filespec.}
    --separator-cutline	Print a separator in the form of a cutline between the
			first and last lines.
    --separator-cutline-file
			Print a separator in the form of a cutline that informs
			about the truncation of the FILE and the number of
			omitted lines. If reading from standard input, the
			contents are captured in a temp file whose filespec is
			then used.
    --separator-cut-what WHAT
			Print a separator in the form of a cutline with WHAT in
			the middle.${lineNumMarker:+ If WHAT contains ${lineNumMarker}, it is replaced with the
			number of omitted lines.}${fileMarker:+ If WHAT contains ${fileMarker}, it is
			replaced with the current filespec.}
    --quiet|-q		Do not precede each FILE with a header.
    --verbose|-v	Precede with header even if processing just one FILE.
    By default, each FILE is precedes with a header giving the file name if more
    than one FILE is given.
HELPTEXT
}

algorithm=headTail
lines=$DEFAULT_LINES
isDuplicateIfShort=
separator=
separatorInfo=
header=auto
typeset -a headerArgs=()
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printLongUsage "$0"; exit 0;;
	--lines|-n)	shift
			case "$1" in
			    +(0))	shift; algorithm=blackhole;;
			    -+(0))	shift; algorithm=passThrough;;
			    -+([0-9]))	lines="${1#-}"; shift; algorithm=allButHeadTail;;
			    +([0-9]))	lines="$1"; shift;;
			    *)		printf '%s: invalid number of lines: %s\n' "$(basename "$0")" "$1"; exit 2;;
			esac
			;;
	--lines=*)	lines="${1#--lines=}"; shift;;
	--duplicate-if-short)
			shift; isDuplicateIfShort=t;;
	--separator|-s)	shift; separator="${1?}"; shift;;
	--separator-cutline)
			shift; separatorInfo='[...]';;
	--separator-cutline-file)
			shift; separatorInfo='[{} lines omitted from {F}]'; algorithm='headTailWithTempfile';;
	--separator-cut-what)
			shift; separatorInfo="[${1?}]"; shift;;
	--silent|--quiet|-q)
			headerArgs+=("$1"); shift; header=no;;
	--verbose|-v)	headerArgs+=("$1"); shift; header=yes;;
	--)		shift; break;;
	-)		break;;
	-*)		{ echo "ERROR: Unknown option \"$1\"!"; echo; printUsage "$0"; } >&2; exit 2;;
	*)		break;;
    esac
done

blackhole()
{
    # We can use head (or tail) as the only functionality is the file header;
    # the contents are all suppressed by the line count 0.
    head --lines=0 "${headerArgs[@]}" "$@"
}

passThrough()
{
    # We can use head (or tail) as the only functionality is the file header;
    # the contents are all suppressed by the line count 0.
    head --lines=-0 "${headerArgs[@]}" "$@"
}

headTail()
{
    exec awk \
	-v "lines=$lines" \
	-v "isDuplicateIfShort=$isDuplicateIfShort" \
	-v "separator=${separator//\\/\\\\}" \
	-v "separatorInfo=${separatorInfo//\\/\\\\}" \
	-v "lineNumMarker=${lineNumMarker//\\/\\\\}" \
	-v "fileMarker=${fileMarker//\\/\\\\}" \
	-v "header=$header" \
	-v "statusOnPassthrough=${statusOnPassthrough:-0}" \
'
function printHeadTail(      literalLineNumMarkerPattern, literalFileMarkerPattern, cutlineHalfWidth, cutline, filespec, omittedNum, start, i)
{
    literalLineNumMarkerPattern = gensub(/[][\\$*+?{}.|()^]/, "\\\\&", "g", lineNumMarker)
    literalFileMarkerPattern = gensub(/[][\\$*+?{}.|()^]/, "\\\\&", "g", fileMarker)

    if (bufCnt > lines && (separator != "" || separatorInfo != "")) {
	omittedNum = (bufCnt - lines)
	if (omittedNum == 1) {
	    print plusOneLine
	} else {
	    filespec = (ARGC == 1 || ARGV[ARGIND] == "-" ? "input" : ARGV[ARGIND])
	    if (separatorInfo != "") {
		cutlineHalfWidth = ((ENVIRON["COLUMNS"] == "" ? 80 : ENVIRON["COLUMNS"]) \
		    - 2 \
		    - length(separatorInfo) \
		    - (separatorInfo ~ literalLineNumMarkerPattern ? length(omittedNum) - 2 : 0) \
		    - (separatorInfo ~ literalFileMarkerPattern ? length(filespec) : 0) \
		) / 2
		if (cutlineHalfWidth > 0) cutline = gensub(/ /, "~", "g", sprintf("%*s", cutlineHalfWidth, ""))
		separator = cutline (cutline == "" ? "" : " ") separatorInfo (cutline == "" ? "" : " ") cutline
	    }
	    if (separator ~ literalLineNumMarkerPattern) separator = gensub(literalLineNumMarkerPattern, omittedNum, "g", separator)
	    if (separator ~ literalFileMarkerPattern) separator = gensub(literalFileMarkerPattern, filespec, "g", separator)

	    print separator
	    isTruncated = 1
	}
    }

    start = (bufCnt < lines ? lines - bufCnt + 1 : 1)
    for (i = start; i <= lines; i++)
	print buf[((lastNr + i - 1) % lines) + 1]

    delete buf
    bufCnt = 0
    lastNr = 1
}
FNR == 1 {
    if (ARGIND > 1)
	printHeadTail()

    if (header == "yes" || header == "auto" && ARGC > 2) {
	printf (ARGIND > 1 ? "\n" : "") "==> %s <==\n", (FILENAME == "-" ? "standard input" : FILENAME)
    }
}
FNR <= lines {
    print
    if (! isDuplicateIfShort) next
}
FNR == (lines + 1) {
    plusOneLine = $0
}
{
    buf[((FNR - 1) % lines) + 1] = $0
    bufCnt++
    lastNr = FNR
}
ENDFILE {
    printHeadTail()
}
END {
    exit(isTruncated ? 0 : statusOnPassthrough)
}
' "$@"
}

allButHeadTail()
{
    exec awk \
	-v "lines=$lines" \
	-v "header=$header" \
'
FNR == 1 {
    bufCnt = 0

    if (header == "yes" || header == "auto" && ARGC > 2) {
	printf (ARGIND > 1 ? "\n" : "") "==> %s <==\n", (FILENAME == "-" ? "standard input" : FILENAME)
    }
}
FNR <= lines {
    next
}
{
    if (bufCnt < lines) {
	lastNr = bufCnt
	buf[bufCnt++] = $0
    } else {
	lastNr = (++lastNr % lines)
	print buf[lastNr]
	buf[lastNr] = $0
    }
}
' "$@"
}

headTailWithTempfile()
{
    typeset -a filespecs=()
    typeset -a captureCommand=()
    local tempFilespec
    [ $# -gt 0 ] || set -- -
    local filespec; for filespec in "$@"
    do
	if [ "$filespec" = - -a ${#captureCommand[@]} -eq 0 ]; then # AWK only processes stdin once, even if passed multiple times.
	    local tempPrefix="${HEADTAIL_TEMP_PREFIX:-$(basename -- "$0")}"
	    tempFilespec="$(mktemp --tmpdir "${tempPrefix}-XXXXXX" 2>/dev/null || echo "${TMPDIR:-/tmp}/${tempPrefix}.$$$RANDOM")"
	    captureCommand=(tee -- "$tempFilespec")
	    filespecs+=("$tempFilespec")
	else
	    filespecs+=("$filespec")
	fi
	statusOnPassthrough=99	# Indicate full printing of inputs without truncation via exit status.
    done

    eval '"${captureCommand[@]}"' "${captureCommand:+|}" 'headTail "${filespecs[@]}"'; status=$?

    if [ $status -eq 99 -a ${#captureCommand[@]} -gt 0 ]; then
	# (All) files were printed in full, i.e. no truncation happened; the cutline
	# wasn't shown. The captured input can be removed.
	rm -- "$tempFilespec"
	status=0
    fi
    return $status
}

$algorithm "$@"
