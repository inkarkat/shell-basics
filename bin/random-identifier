#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Generate an identifier from random \w word characters.
Length is 16 characters by default; you can pass a different number.
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-s|--characters SET] [N] [-?|-h|--help]'
}

generator=randomTr
characterSet='_A-Z-a-z-0-9'
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--characters|-s)
			shift; characterSet="${1:?}"; shift;;
	--)		shift; break;;
	-*)		{ echo "ERROR: Unknown option \"$1\"!"; echo; printUsage "$0"; } >&2; exit 2;;
	*)		break;;
    esac
done
case $# in
    0)	count=16;;
    1)	count="${1:?}"; shift;;
    *)	printUsage "$0"; exit 2;;
esac >&2

randomTr()
{
    < /dev/urandom tr -dc "$characterSet"
}

$generator | head -c${count:?}; echo
