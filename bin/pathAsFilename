#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Encode FILESPEC for use as a filename; i.e. escape all forbidden characters
(e.g. forward slashes) so that the result is a valid filename. Canonicalizes
FILESPEC into an absolute path (so at least FILESPEC's directory has to exist)
unless --as-is is given.
Usage: "$(basename "$1")" [--as-is] -e|--encode FILESPEC [-?|-h|--help]
Decode ENCODED into a filespec.
Usage: "$(basename "$1")" -d|--decode ENCODED [-?|-h|--help]
HELPTEXT
}

isAsIs=
action=
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--as-is)	shift; isAsIs=t;;
	--encode|-e)	shift; action=encode;;
	--decode|-d)	shift; action=decode;;
	--)		shift; break;;
	-*)		{ echo "ERROR: Unknown option \"$1\"!"; echo; printUsage "$0"; } >&2; exit 2;;
	*)		break;;
    esac
done
[ "$action" -a $# -eq 1 ] || { printUsage "$0" >&2; exit 2; }


case "$action" in
    encode)
	if [ "$isAsIs" ]; then
	    absoluteFilespec="$1"
	else
	    absoluteFilespec="$(realpath --no-symlinks -- "$1")" || exit $?
	    [ "$HOME" -a -d "$HOME" ] && absoluteFilespec="${absoluteFilespec/#${HOME%/}/\~}"
	fi

	name="$absoluteFilespec"
	name="${name//=/==}"
	name="${name//\//=+}"
	name="${name//:/=-}"
	printf '%s\n' "$name"
	;;
    decode)
	filespec="$1"
	filespec="${filespec//=-/:}"
	filespec="${filespec//=+/\/}"
	filespec="${filespec//==/=}"
	[ "$HOME" -a -d "$HOME" ] && filespec="${filespec/#~\//${HOME%/}\/}"
	printf '%s\n' "$filespec"
	;;
    *)	printf >&2 'ASSERT: Invalid action: %s\n' "$action"; exit 2;;
esac
