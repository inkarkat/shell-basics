#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Just print all supplied command-line arguments to standard error.
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-v|--verbose] [ARG ...] [-?|-h|--help]'
}
isVerbose=
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --verbose|-v)	shift; isVerbose=t;;
esac

quotedArgs=; if [ $# -gt 0 ]; then printf -v quotedArgs '%q ' "$@"; quotedArgs=${quotedArgs% }; fi
printf '%s\n' "$quotedArgs"

if [ "$isVerbose" ]; then
    echo >&2 "command-line arguments \$0: \"$0\""
    let argCnt=1
    while [ $# -gt 0 ]
    do
	echo >&2 "command-line arguments \$${argCnt}: \"$1\""
	shift
	let argCnt+=1
    done
fi
