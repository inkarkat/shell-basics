#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Just print all supplied command-line arguments to standard error.
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-a|--array NAME] [-v|--verbose] [--] [ARG ...] [-?|-h|--help]'
}
defaultPrefix=''
defaultSuffix=''
isVerbose=
verbosePrefix=''
verboseSuffix=': '
startIndex=1
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--array|-a)	shift; defaultPrefix="$1=("; defaultSuffix=')'; verbosePrefix="$1["; verboseSuffix=']='; startIndex=0; shift;;
	--verbose|-v)	shift; isVerbose=t;;
	--)		shift; break;;
	-*)		{ echo "ERROR: Unknown option \"$1\"!"; echo; printUsage "$0"; } >&2; exit 2;;
	*)		break;;
    esac
done

if [ "$isVerbose" ]; then
    shellquote()
    {
	case "$1" in
	    *[$'\n\r\t\v']*)	    printf %q "$1";;
	    *[$'\\ `\'\"?*[]!+']*)  printf %s "'${1//\'/\'\\\'\'}'";;
	    *)			    printf %s "$1";;
	esac
    }

    let argCnt=$startIndex
    while [ $# -gt 0 ]
    do
	printf >&2 '%s%s%s%s\n' "$verbosePrefix" "$argCnt" "$verboseSuffix" "$(shellquote "$1")"
	shift
	let argCnt+=1
    done
else
    quotedArgs=; if [ $# -gt 0 ]; then printf -v quotedArgs '%q ' "$@"; quotedArgs=${quotedArgs% }; fi
    [ -n "$quotedArgs" -o -n "${defaultPrefix}${defaultSuffix}" ] && printf '%s%s%s\n' "$defaultPrefix" "$quotedArgs" "$defaultSuffix"
fi
