#!/bin/bash
shopt -qs extglob # Enable extended file pattern matching operators from ksh (?(pattern-list), !(pattern-list), ...) in Bash.

printUsage()
{
    cat <<HELPTEXT
Test whether the passed (anchored, extended) GLOB(s) match either the (full
passed, also subpaths with -s|--subpath) path or just the filename of the passed
FILESPEC(s).
Returns 0 if (at least one) match and 1 if no matches.
Returns 0 if no GLOB (but existing FILESPEC(s)) is passed.
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" "[-s|--subpath] [-l|--files-matching|-1|--first-matching|-L|--files-not-matching] ['GLOB' ...] -- FILESPEC [...] [-?|-h|--help]"
    printf 'Usage: %q %s\n' "$(basename "$1")" "[...] 'GLOB' FILESPEC [...] [-?|-h|--help]"
}
if [ $# -eq 0 ]; then
    printUsage "$0" >&2
    exit 2
fi
isMatchSubPaths=
isPrintMatching=
isPrintFirstMatching=
isPrintNotMatching=
typeset -a globs=()
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)		    shift; printUsage "$0"; exit 0;;
	--subpath|-s)		    shift; isMatchSubPaths=t;;
	--files-matching|-l)	    shift; isPrintMatching=t;;
	--first-matching|-1)	    shift; isPrintFirstMatching=t;;
	--files-not-matching|-L)    shift; isPrintNotMatching=t;;
	--)			    shift; break;;
	-*)			    { echo "ERROR: Unknown option \"$1\"!"; echo; printUsage "$0"; } >&2; exit 2;;
	*)			    globs+=("$1"); shift;;
    esac

    if [ $# -eq 0 ]; then
	set -- "${globs[@]:1}"
	globs=("${globs[0]}")
	break
    fi
done
if [ ${#globs[@]} -eq 0 ]; then
    # No GLOBs to match. Check that at least one FILESPEC is given and exists as
    # a file (and isn't just an unmatched glob).
    if [ $# -eq 0 ]; then
	exit 2  # No FILESPECs to match.
    fi

    for filespec
    do
	[ -e "$filespec" ] && exit 0
    done
    exit 1
elif [ $# -eq 0 ]; then
    exit 1  # No FILESPECs to match.
fi


status=1
for filespec
do
    found=
    filename="$(basename -- "$filespec")"

    for g in "${globs[@]}"
    do
	case "$filename" in
	    @($g)) found=t; break;;
	esac
	case "$filespec" in
	    @($g)) found=t; break;;
	esac
	if [ "$isMatchSubPaths" ]; then
	    case "$filespec" in
		*/@($g)) found=t; break;;
	    esac
	fi
    done

    if [ "$found" ]; then
	if [ "$isPrintMatching" ]; then
	    printf '%s\n' "$filespec"
	    status=0
	elif [ "$isPrintFirstMatching" ]; then
	    printf '%s\n' "$filespec"
	    exit 0
	elif [ ! "$isPrintNotMatching" ]; then
	    exit 0
	fi
    elif [ "$isPrintNotMatching" ]; then
	printf '%s\n' "$filespec"
    fi
done
exit $status
