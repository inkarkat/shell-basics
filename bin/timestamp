#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Print a timestamp.
HELPTEXT
printf 'Usage: %q %s\n' "$(basename "$1")" '[--human|--short|--sortable] [-?|-h|--help]'
}

case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --human)	date '+%d-%b-%Y_%T';;
    --short)	date '+%Y%m%d_%H%M%S';;
    --sortable)	date '+%Y-%m-%d_%T.%N';;
    *)		date '+%d-%b-%Y_%T.%N';;
esac
