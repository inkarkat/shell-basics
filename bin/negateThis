#!/bin/bash
shopt -qs extglob

printUsage()
{
    cat <<HELPTEXT
Negate the exit status of the supplied command; a success turns into 1 and any
failure into 0.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--] COMMAND [ARG ...] [-?|-h|--help]'
    echo
    cat <<HELPTEXT
See also: succeedThis, failThis, acceptStatus
HELPTEXT
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --)			shift;;
esac
if [ $# -eq 0 ]; then
    echo >&2 'ERROR: No COMMAND passed.'
    echo >&2
    printUsage "$0" >&2
    exit 2
fi

"$@" && exit 1 || exit 0
