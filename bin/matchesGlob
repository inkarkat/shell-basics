#!/bin/bash
shopt -qs extglob # Enable extended file pattern matching operators from ksh (?(pattern-list), !(pattern-list), ...) in Bash.

printUsage()
{
    cat <<HELPTEXT
Test whether all ARGs match GLOB. Only considers ARGs until one is equal to the
MATCHESGLOB_UNTIL value.
SEE ALSO:
- containsGlob just requires that one ARG matches the GLOB.
- whiteOrBlackListGlob can be used to implement a GLOB-based white- or
  blacklist.
HELPTEXT
    echo
    printf 'Usage: [MATCHESGLOB_UNTIL=value] %q %s\n' "$(basename "$1")" "[--] 'GLOB' [ARG ...] [-?|-h|--help]"
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --)			shift;;
esac

glob="$1"; shift
for elem
do
    [ -n "$MATCHESGLOB_UNTIL" ] && [ "$MATCHESGLOB_UNTIL" = "$elem" ] && break
    case "$elem" in
	@($glob))   ;;
	*)	    exit 1;;
    esac
done
exit 0
