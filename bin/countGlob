#!/bin/bash
shopt -qs extglob # Enable extended file pattern matching operators from ksh (?(pattern-list), !(pattern-list), ...) in Bash.

printUsage()
{
    cat <<HELPTEXT
Count the number of ARG(s) that match GLOB.
HELPTEXT
    echo
    printf 'Usage: count=$(%q %s)\n' "$(basename "$1")" "[--] 'GLOB' [ARG ...] [-?|-h|--help]"
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --)			shift;;
esac

glob="$1"; shift
let count=0
for elem
do
    case "$elem" in
	@($glob)) let count+=1;;
    esac
done
printf '%d\n' "$count"
