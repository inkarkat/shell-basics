#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Convert the passed number(s) N to the corresponding ordinal.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" 'N [...] [-?|-h|--help]'
}

case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac
if [ $# -eq 0 ]; then
    printUsage "$0" >&2
    exit 2
fi

ord()
{
    local n="${1:?}"; shift
    local mod100=$((n % 100)) suffix

    if ((mod100 >= 11 && mod100 <= 13)); then
	suffix='th'
    else
	case $((n % 10)) in
	    1) suffix='st' ;;
	    2) suffix='nd' ;;
	    3) suffix='rd' ;;
	    *) suffix='th' ;;
	esac
    fi
    printf '%d%s\n' "$n" "$suffix"
}

for number
do
    ord $number
done
